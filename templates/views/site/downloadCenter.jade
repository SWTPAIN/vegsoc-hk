extends ../../layouts/default

//- BODY
block content
	article#download-center
		header.download-center-header
			.container: .row: .col-sm-10.col-sm-offset-1
				h1.text-center.mb-0 The VegsocHK Download Center
				p.lead.text-center.mt-1 Running a meetup? Learning Node or Keystone? Thinking about hybrid apps and Cordova? Here's a bag of freebies to get you well and truly on your way.
			.download-center-hero
			.download-center-buttons
				.container: .row
					.col-sm-4
						.text-center: a(href='http://github.com/borisbozic/sydjs-assets', target='_blank').btn.btn-primary.btn-lg.btn-block
							span.entypo.entypo-down &nbsp;
							| Download design assets
					.col-sm-4
						.text-center: a(href='http://github.com/bladey/sydjs-app', target='_blank').btn.btn-primary.btn-lg.btn-block
							span.entypo-social.entypo-github &nbsp;
							| Clone app on Github
					.col-sm-4
						.text-center: a(href='http://github.com/JedWatson/sydjs-site', target='_blank').btn.btn-primary.btn-lg.btn-block
							span.entypo-social.entypo-github &nbsp;
							| Clone website on Github
		main.download-center-main
			.container
				hr
				section
					h4.text-center Made with...
					.row: .col-sm-8.col-sm-offset-2
						.download-center-createdwith
							img(src='/images/downloadCenter/cordova.jpg', alt='Cordova', title='Cordova')
							img(src='/images/downloadCenter/backbone.jpg', alt='Backbone', title='Backbone')
							img(src='/images/downloadCenter/jquery.jpg', alt='jQuery', title='jQuery')
							img(src='/images/downloadCenter/velocity.jpg', alt='Velocity.js', title='Velocity.js')
							img(src='/images/downloadCenter/moment.jpg', alt='Moment.js', title='Moment.js')
							img(src='/images/downloadCenter/underscore.jpg', alt='Underscore.js', title='Underscore.js')
							img(src='/images/downloadCenter/keystone.jpg', alt='KeystoneJS', title='KeystoneJS')
				section
					h4.text-center ... and lovingly brought to you by the guys at <a href="http://www.thinkmill.com.au" target="_blank">Thinkmill</a>


block js
	script.
		$(window).resize(function() {
			$('.download-center-hero').height($(window).height());
		});
		$(window).trigger('resize');
